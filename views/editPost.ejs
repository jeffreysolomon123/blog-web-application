<link rel="stylesheet" href="../node_modules/@fortawesome/fontawesome-free/css/all.css">
<%- include("partials/header.ejs") %>
<link rel="stylesheet" href="/css/extra.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
<style>
    ul{
        list-style-type: none;
    }

    .body,*{
        padding: 0;
        margin: 0;
    }

    .myeditcontainer{
        display: flex;
        font-family: "Poppins", serif;
     font-weight: 400;
    font-style: normal;

    border: 2px solid black;
    margin: 10px;
    padding-top: 10px;
    padding-left: 10px;
    width: auto;
    justify-content: space-between;
    max-width: 700px;
    padding-right: 10px;
    }

    .myeditbutton{
        background-color: black;
        color: white;
        padding: 5px 20px;
        border-radius: 2px;
        border: none;
        
    }
</style>

<div style="margin: 50px auto;
            max-width: 800px;">
    <% if(allPosts.length > 0){ %>
    <ul>
        <% allPosts.forEach(function (post, index){ %>

            <li>  
                <div class="myeditcontainer">
                <p><%= post.t %></p>
                <a href="/editPost/<%= index %>"><button type="button" class="myeditbutton">Edit</button></a>
                <form action="/deletePost/<%= index %>" method="post">
                    <input type="submit" value="Delete" class="myeditbutton">
                </form> 
            </div>
            </li>

        <% }); %>
    </ul>
    <% } else { %>
    <h2>Add post to Edit or Delete!</h2>
    <% } %>
</div>


    <script src="/js/bootstrap.bundle.min.js"></script>
